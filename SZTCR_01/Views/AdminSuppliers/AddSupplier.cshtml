@model SZTCR_01.Models.ViewModels.AddSupplierRequest

@{
}

<div>
    <h2 class="display-3">Dodaj Dobavljaca</h2>
</div>

<div class="container py-5">
    <form method="post">
        <div class="form-group mb-3 w-75">
            <label class="form-label" for="nazivDobavljaca">Unesite naziv dovavljaca</label>
            <input class="form-control" name="nazivDobavljaca" id="nazivDobavljaca" asp-for="NazivDobavljaca" />

            <label class="form-label" for="adresaDobavljaca">Unesite adresu dobavljaca</label>
            <input class="form-control" name="adresaDobavljaca" id="adresaDobavljaca" asp-for="AdresaDobavljaca" />

            <label class="form-label" for="emailDobavljaca">Unesite email dobaljaca</label>
            <input class="form-control" name="emailDobavljaca" id="emailDobavljaca" asp-for="EmailDobavljaca" />
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-secondary">Posalji</button>
        </div>
    </form>
</div>
